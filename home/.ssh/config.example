# Example SSH Config File
# Copy this to 'config' (without .example) and customize

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    PreferredAuthentications publickey

# GitLab
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    PreferredAuthentications publickey

# Bitbucket
Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_ed25519
    PreferredAuthentications publickey

# Custom Server Example
Host myserver
    HostName example.com
    User myusername
    Port 22
    IdentityFile ~/.ssh/id_rsa
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Development Server with Jump Host
Host devserver
    HostName dev.internal.example.com
    User devuser
    IdentityFile ~/.ssh/id_ed25519
    ProxyJump jumphost.example.com

# Wildcard for all internal servers
Host *.internal.example.com
    User myusername
    IdentityFile ~/.ssh/id_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Global defaults (applies to all hosts)
Host *
    AddKeysToAgent yes
    IdentitiesOnly yes
    Compression yes
    TCPKeepAlive yes
