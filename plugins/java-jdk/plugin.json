{
  "$schema": "../../config/plugin-schema.json",
  "id": "java-jdk",
  "name": "Java Development Kit",
  "version": "1.0.0",
  "description": "Portable Java JDK for Java development",
  "author": "Naner",
  "homepage": "https://github.com/yourusername/naner",
  "license": "MIT",
  "enabled": false,
  "nanerVersion": "1.0.0",
  "dependencies": [],
  "vendors": [
    {
      "name": "Eclipse Temurin JDK",
      "description": "Open-source Java Development Kit",
      "extractDir": "java",
      "releaseSource": {
        "type": "github",
        "repo": "adoptium/temurin21-binaries",
        "assetPattern": "*jdk_x64_windows_hotspot*.zip",
        "fallback": {
          "version": "21.0.1",
          "url": "https://github.com/adoptium/temurin21-binaries/releases/download/jdk-21.0.1%2B12/OpenJDK21U-jdk_x64_windows_hotspot_21.0.1_12.zip",
          "fileName": "OpenJDK21U-jdk_x64_windows_hotspot_21.0.1_12.zip",
          "size": "~200"
        }
      },
      "postInstallFunction": "JavaJDK.PostInstall"
    }
  ],
  "environment": {
    "variables": {
      "JAVA_HOME": "%NANER_ROOT%\\vendor\\java",
      "JDK_HOME": "%NANER_ROOT%\\vendor\\java",
      "CLASSPATH": ".;%JAVA_HOME%\\lib\\*"
    },
    "pathPrecedence": [
      "%NANER_ROOT%\\vendor\\java\\bin"
    ]
  },
  "hooks": {
    "install": false,
    "uninstall": false,
    "enable": true,
    "disable": true,
    "envSetup": true
  },
  "configuration": {
    "javaVersion": "21",
    "enableJavaFX": false
  },
  "tags": [
    "java",
    "jvm",
    "development",
    "compiler"
  ]
}
